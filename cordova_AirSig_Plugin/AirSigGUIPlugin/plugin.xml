            android:name="com.airsig.webclientgui.VerifyActivity"
            android:theme="@style/AppThemeVerify"
            android:screenOrientation="portrait" >
			</activity>        
			<activity
            android:name="com.airsig.webclientgui.TutorialActivity"
            android:theme="@style/AppThemeTutorial"
            android:screenOrientation="portrait" >
			</activity>        
			<activity android:name="com.airsig.webclientgui.TrainingActivity"
            android:screenOrientation="portrait" >            
			</activity>
